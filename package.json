{
  "name": "kodi-connect",
  "version": "1.0.0",
  "type": "module",
  "description": "Library for interacting with a Kodi JSON-PRC server using WebRTC",
  "repository": {
    "type": "git",
    "url": "git://github.com/kodi-game/kodi-connect.git"
  },
  "license": "GPL-2.0-or-later",
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "keywords": [
    "entertainment",
    "games",
    "kodi",
    "multimedia",
    "retroplayer"
  ],
  "scripts": {
    "audit": "audit-ci --moderate --package-manager npm",
    "build": "snowpack build",
    "clean": "rimraf build node_modules web_modules",
    "depends": "bash tools/npm-depends.sh all",
    "depends:build": "bash tools/npm-depends.sh build",
    "depends:checkout": "bash tools/npm-depends.sh checkout",
    "depends:install": "bash tools/npm-depends.sh install",
    "deploy": "gh-pages --branch main --repo https://github.com/eigendude/eigendude.github.io.git --dist build --dotfiles",
    "format": "prettier --write . && eslint --fix .",
    "lint": "prettier --check . && eslint .",
    "start": "snowpack dev",
    "test": "mocha"
  },
  "dependencies": {
    "hls.js": "^1.0.10",
    "jsonld": "^5.2.0",
    "three": "^0.132.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.17.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "audit-ci": "^5.1.2",
    "chai": "^4.3.6",
    "eslint": "^8.8.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "gh-pages": "^3.2.3",
    "mocha": "^9.2.0",
    "prettier": "^2.5.1",
    "prettier-plugin-pkg": "^0.11.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "snowpack": "^3.8.8",
    "snowpack-plugin-copy": "^1.0.1",
    "snowpack-plugin-hmr-inject": "^0.1.5",
    "threads": "^1.6.5",
    "threads-plugin": "^1.4.0",
    "typescript": "^4.5.5"
  },
  "resolutions": {
    "glob-parent": "6.0.2",
    "vm2": "3.9.9"
  },
  "bundleDependencies": false,
  "target": "web"
}
